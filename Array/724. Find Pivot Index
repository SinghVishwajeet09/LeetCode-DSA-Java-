class Solution {
    public int pivotIndex(int[] nums) {
        if(nums.length==0) return -1;

        int sumLeft =0;
        int sumRight =0;
        for(int num : nums)
        sumRight+=num;
        for(int i=0;i<nums.length; i++){
            sumRight -= nums[i];
            if(sumRight == sumLeft ) return i;
            sumLeft += nums[i];
        } 
        return -1;
        
    }
}
